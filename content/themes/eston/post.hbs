{{!

    Renders:
      Post Author Link
      Post Author Image
      Post Author Name
      Post Title
      Post Image / Embed
      Post Content
      Post Tags
      Post Meta
      Post Meta Date
      Post Meta Comments Count
      Post Meta Share Count
      Post Meta Share List
      Disqus Comments
      Facebook Comments

    Microdata:
      BlogPosting Headline
      BlogPosting Url
      BlogPosting Name
      BlogPosting Image
      BlogPosting Keywords
      BlogPosting Published

}}

{{!< default}}

{{#post}}

<article itemscope itemtype="http://schema.org/BlogPosting" class="post{{^if image}}{{^has tag="_photo, _quote, _link, _chat, _audio, _video"}} post--text{{/has}}{{/if}}{{#if image}} post--cover{{^has tag="_quote, _link, _chat, _audio, _video"}} post--photo{{/has}}{{/if}}{{#has tag="_quote"}} post--quote{{/has}}{{#has tag="_link"}} post--link{{/has}}{{#has tag="_chat"}} post--chat{{/has}}{{#has tag="_audio"}} post--cover post--audio{{/has}}{{#has tag="_video"}} post--cover post--video{{/has}} post--permalink" id="{{id}}" data-ani="hide" data-js="post">

  <div class="post-inner">

    <header class="post-section post-header">
      <div class="wrapper post-wrapper">

      {{> "post/author" }}

      </div>
    </header>

    {{> "post/media" }}

    <section class="post-section post-body">
      <div class="wrapper post-wrapper">

        {{> "post/title" }}

        {{> "post/content" }}

        {{> "post/tags" }}

      </div>
    </section>

    <footer class="post-section post-footer">
      <div class="wrapper post-wrapper">

      {{> "post/meta" }}

      </div>
    </footer>

    {{! Disqus Comments }}
    {{> "disqus/comments"}}

  </div>

</article>

{{/post}}
